<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonStyles" parent="Theme.ButtlerLogin">

        <item name = "android:layout_margin">16dp</item>
        <item name = "android:minHeight">50sp</item>
        <item name = "android:textColor">@color/black</item>
        <item name = "android:textStyle">bold</item>
        <item name = "android:textAllCaps">false</item>
        <item name = "android:textSize">17sp</item>
        <item name = "android:backgroundTint">@color/teal_200</item>
        <item name = "cornerRadius">0dp</item>

    </style>

    <style name="EditIdStyle" parent="Theme.ButtlerLogin">

        <item name = "android:layout_marginStart">16dp</item>
        <item name = "minHeight">48sp</item>
        <item name = "android:layout_marginEnd">16dp</item>
        <item name = "android:layout_marginBottom">16dp</item>
        <item name = "android:textSize">17sp</item>

        <item name = "android:textAlignment">center</item>


        <item name = "android:textColor">#FFFFFF</item>

    </style>

    <style name="TextMessage" parent = "Theme.ButtlerLogin">


        <item name = "android:layout_marginTop">124dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name = "android:textAlignment">center</item>
        <item name="android:gravity">center</item>


        <item name = "android:textSize">34sp</item>
        <item name = "lineHeight">41sp</item>
        <item name = "fontFamily">@font/prompt</item>
        <item name = "android:textStyle">bold</item>
        <item name = "android:textColor">@color/white</item>
        <item name = "fontWeight">500</item>
        <item name = "android:lineSpacingExtra">-10sp</item>



    </style>

    <style name="ForgotButton" parent="Theme.ButtlerLogin">

        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>

        <item name="minHeight">50sp</item>
        <item name = "android:gravity">center</item>


        <item name = "android:fontFamily">@font/prompt</item>
        <item name = "fontWeight">500</item>
        <item name = "android:textSize">17sp</item>
        <item name = "lineHeight">24dp</item>
        <item name = "android:textAlignment">center</item>
        <item name= "android:textColor">#19DBE6</item>





    </style>

    <style name = "Body17" parent = "Theme.ButtlerLogin">

        <item name = "android:fontFamily">@font/prompt</item>
        <item name = "fontWeight">500</item>
        <item name = "android:textSize">17dp</item>
        <item name = "lineHeight">24dp</item>
        <item name = "android:textAlignment">center</item>
        <item name= "android:textColor">#19DBE6</item>

    </style>


</resources>